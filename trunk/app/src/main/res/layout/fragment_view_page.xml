<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/secondary_2_0"
                android:paddingTop="40dp"
                android:paddingBottom="50dp"
                android:paddingEnd="50dp"
                android:paddingRight="50dp"
                android:paddingLeft="50dp"
                android:paddingStart="50dp">

<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Yours Today! \nRonco Veg-O-Matic"
        android:id="@+id/message_major"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText"
        style="@style/AppTheme.TextAppearance.Offer.Medium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="It slices! It dices!"
        android:id="@+id/message_minor"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/offer_button"
        tools:ignore="HardcodedText"
        style="@style/AppTheme.TextAppearance.Offer.Small"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/offer_button_label"
        android:id="@+id/offer_button"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        style="@style/AppTheme.PrimaryButton"/>

</RelativeLayout>