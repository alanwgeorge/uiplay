<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="AppTheme.BaseButton" parent="AppTheme">
        <item name="android:paddingLeft">@dimen/button_padding_left</item>
        <item name="android:paddingRight">@dimen/button_padding_right</item>
        <item name="android:paddingTop">@dimen/button_padding_top</item>
        <item name="android:paddingBottom">@dimen/button_padding_bottom</item>
    </style>

    <style name="AppTheme.PrimaryButton" parent="AppTheme.BaseButton">
        <item name="android:background">@drawable/primary_button_selector</item>
        <item name="android:textColor">@color/secondary_1_1</item>
        <!--<item name="android:paddingLeft">10dp</item>-->
        <!--<item name="android:paddingRight">10dp</item>-->
        <!--<item name="android:paddingTop">15dp</item>-->
        <!--<item name="android:paddingBottom">15dp</item>-->
    </style>

    <style name="AppTheme.BehindButton" parent="AppTheme.BaseButton">
        <item name="android:background">@drawable/behind_button_selector</item>
        <item name="android:textColor">@color/secondary_2_1</item>
    </style>

    <style name="AppTheme.TextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="AppTheme.TextAppearance.Medium" parent="AppTheme.TextAppearance">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Small" parent="AppTheme.TextAppearance">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Offer.Medium" parent="AppTheme.TextAppearance.Medium">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/secondary_2_1</item>
    </style>

    <style name="AppTheme.TextAppearance.Offer.Small" parent="AppTheme.TextAppearance.Small">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/secondary_2_1</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/t2_primary_2</item>
        <item name="colorPrimaryDark">@color/t2_primary_0</item>
        <item name="colorAccent">@color/t2_complement_3</item>
        <item name="buttonStyle">@style/AppTheme2.Button</item>
    </style>

    <style name="AppTheme2.Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
