<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="controller" type="com.example.android.uiplay.expandablelist.ListsController"/>
    </data>
<LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:id="@+id/seekBar"
            android:progressDrawable="@android:color/transparent"
            android:layout_gravity="center_horizontal"
            android:progress="50"
            android:background="@color/primary_2"
            android:thumb="@drawable/seekbar_thumb"
            app:setOnSeekBarChangeListener="@{controller.seekBarListener}"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
              android:text="50"
              android:id="@+id/progressText"
              android:singleLine="true"
              android:textSize="@dimen/abc_text_size_large_material"
              android:layout_marginTop="-25dp" tools:ignore="HardcodedText"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:baselineAligned="false">
        <ListView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/secondary_1_2"
                android:id="@+id/listView1"/>
        <ListView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/secondary_2_2"
                android:id="@+id/listView2"/>
    </LinearLayout>
</LinearLayout>
</layout>