<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/account_item_width"
    android:layout_height="@dimen/account_item_height"
    android:id="@+id/account_row_content"
    android:layout_gravity="end"
    android:orientation="vertical">

    <RelativeLayout android:layout_width="@dimen/account_item_width"
          android:layout_height="2dp"
          android:id="@+id/account_list_divider"
          android:background="@color/secondary_2_3"/>

    <RelativeLayout
        android:layout_width="@dimen/account_item_width"
        android:layout_height="@dimen/account_item_height"
        android:id="@+id/behind_layout"
        android:layout_below="@+id/account_list_divider"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="visible"
        android:background="@color/primary_2">
        <Button
            android:layout_width="@dimen/button_below_width"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:id="@+id/button_below"
            android:text="@string/button_below_label"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            style="@style/AppTheme.BehindButton"/>
    </RelativeLayout>

    <com.example.android.uiplay.view.AccountRowFrontRelativeLayout
        android:layout_width="@dimen/account_item_width"
        android:layout_height="@dimen/account_item_height"
        android:id="@+id/front_layout"
        android:layout_below="@+id/account_list_divider"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="@dimen/account_item_height"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@color/primary_1"
            android:visibility="visible"
            android:id="@+id/account_details_container"
            android:paddingTop="15dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/action_indicator"
                android:background="@drawable/action_indicator"
                android:layout_centerVertical="true"
                android:contentDescription="Action Indicator"
                tools:ignore="HardcodedText"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/account_name"
                android:text="My Checking"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/action_indicator"
                android:layout_toEndOf="@id/action_indicator"
                android:paddingLeft="15dp"
                android:textColor="#44464A"
                style="@style/AppTheme.TextAppearance.Medium"
                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/account_number"
                android:text="...9876"
                android:paddingRight="15dp"
                android:paddingEnd="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                tools:ignore="HardcodedText,RtlSymmetry"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/balance_description"
                android:text="Available balance"
                android:layout_alignParentBottom="true"
                android:paddingLeft="15dp"
                android:paddingBottom="15dp"
                style="@android:style/TextAppearance.Small"
                android:layout_toRightOf="@id/action_indicator"
                android:layout_toEndOf="@id/action_indicator"
                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/balance"
                android:text="$4,987.98"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingBottom="15dp"
                android:paddingRight="15dp"
                style="@style/AppTheme.TextAppearance.Medium"
                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/corner_indicator"
                android:background="@drawable/corner_alert_icon"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:contentDescription="Swipable Content Indicator"
                tools:ignore="HardcodedText"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/account_item_height"
            android:id="@+id/front_buttons_container"
            android:layout_toLeftOf="@id/account_details_container"
            tools:ignore="RtlHardcoded">
            <Button
                android:layout_width="@dimen/account_button_width"
                android:layout_height="match_parent"
                android:id="@+id/button_front"
                android:text="Press Me"
                style="@style/AppTheme.PrimaryButton"
                tools:ignore="HardcodedText"/>
        </RelativeLayout>
    </com.example.android.uiplay.view.AccountRowFrontRelativeLayout>
</RelativeLayout>
